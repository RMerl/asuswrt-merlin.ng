&switch0 {
	pinctrl-names = "default"; 
	pinctrl-0 = <&mii_mdc_pin_48 &mii_mdio_pin_49 &rgmii_pins>; 
	//pinctrl-1 = <&rgmii_pins>; 

	ports {
		port3@3 {
			phy-handle = <&xbar_grp1>;
			phy-mode = "gmii";
            network-leds = <&led11 &led21>;
			status = "okay";
		};
	};
};

&led_ctrl {

    /* GPHY0 ~ GPHY3 SPD */
    led1: port_0-led-1-pin_1 {
        active_low;
        link = <(LED_SPEED_1G)>;
        status = "okay";
    };
    led3: port_1-led-1-pin_3 {
        active_low;
        link = <(LED_SPEED_1G)>;
        status = "okay";
    };
    led5: port_2-led-1-pin_5 {
        active_low;
        link = <(LED_SPEED_1G)>;
        status = "okay";
    };
    led7: port_3-led-1-pin_7 {
        active_high;
        link = <(LED_SPEED_1G)>;
        status = "okay";
    };
    /* WAN SPD */
    led11: rnr_port_3-led-1-pin_11 {
        active_low;
        link = <(LED_SPEED_1G)>;
        status = "okay";
    };

    /* GPHY0 ~ GPHY3 ACT */
    led16: port_0-led_2-pin_16 {
        active_low;
        activity = <(LED_SPEED_100 | LED_SPEED_1G)>;
        status = "okay";
    };
    led17: port_1-led_2-pin_17 {
        active_low;
        activity = <(LED_SPEED_100 | LED_SPEED_1G)>;
        status = "okay";
    };
    led18: port_2-led_2-pin_18 {
        active_low;
        activity = <(LED_SPEED_100 | LED_SPEED_1G)>;
        status = "okay";
    };
    led19: port_3-led_2-pin_19 {
        active_low;
        activity = <(LED_SPEED_100 | LED_SPEED_1G)>;
        status = "okay";
    };
    /* WAN ACT */
    led21: rnr_port_3-led_2-pin_21 {
        active_low;
        activity = <(LED_SPEED_100 | LED_SPEED_1G)>;
        status = "okay";
    };

    /* USB LED */
    led2: sw_led_2-pin_2 {
        active_low;
        init_high;
        status = "okay";
    };
    
    /* ar3012_dsiable */
    ar3012_dsiable: sw_led_15-pin_15 {
        active_low;
        init_high;
        status = "okay";
    };

    /* PWR LED */
    pwr_led: sw_led_22-pin_22 {
        active_low;
        init_low;
        status = "okay";
    };

    /* ar3012_reset */
    ar3012_reset: sw_led_25-pin_25 {
        active_low;
        init_high;
        status = "okay";
    };
};
