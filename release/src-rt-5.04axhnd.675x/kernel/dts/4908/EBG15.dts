&switch_sf2 {
    //switch-reset = <&gpioc 14 GPIO_ACTIVE_LOW>;

	ports {
		sf2_port0@0 {
			phy-handle = <&gphy8>;
            network-leds = <&led1 &led16>;
			status = "okay";
		};

		sf2_port1@1 {
			phy-handle = <&gphy9>;
            network-leds = <&led3 &led17>;
			status = "okay";
		};

		sf2_port2@2 {
			phy-handle = <&gphya>;
            network-leds = <&led5 &led18>;
			status = "okay";
		};

		sf2_port3@3 {
			phy-handle = <&gphyb>;
            network-leds = <&led7 &led19>;
			status = "okay";
		};
