config BCM63138
	bool "Broadcom BCM63138 family"
	select SUPPORT_SPL
	select SUPPORT_TPL
	select CPU_V7A
	select ENABLE_ARM_SOC_BOOT0_HOOK if SPL
	select TIMER
	select BCM6XXX_TIMER
	select BCM63XX_HSSPI
	imply SPL_TIMER
	imply TPL_TIMER

config BCM63148
	bool "Broadcom BCM63148 family"
	select SUPPORT_SPL
	select SUPPORT_TPL
	select CPU_V7A
	select ENABLE_ARM_SOC_BOOT0_HOOK if SPL
	select SYS_ARCH_TIMER
	select BCM63XX_HSSPI
	select ARM_CORTEX_A15_CVE_2017_5715

